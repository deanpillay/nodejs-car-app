doctype html
html(lang="fr")
  head
    title Vehicle Database
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://bootswatch.com/superhero/bootstrap.min.css')
    // if lt IE 9
      script(src='//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/respond.js/1.3.0/respond.min.js')
  body
    .container

        h1.page-header Vehicle Database
        nav.navbar.navbar-inverse
            ul.nav.navbar-nav.navbar-left
                li
                    a(href="/") Add a vehicle
                
        h4.text-info This application will help you manage your vehicle database
        br
        div.row
            div.col-md-5(style="margin-right:30px") 
                h2 Add your vehicle details
                form(action="add", method="post")
                    div.form-group
                        label Vehicle Make:
                        select.form-control(name="make")
                            option(value="Acura") Acura
                            option(value="Alfa Romeo}") Alfa Romeo
                            option(value="Aston Martin") Aston Martin
                            option(value="Audi") Audi
                            option(value="Bentley") Bentley
                            option(value="BMW") BMW
                            option(value="Bugatti") Bugatti
                            option(value="Buick") Buick
                            option(value="Cadillac") Cadillac
                            option(value="Chevrolet") Chevrolet
                            option(value="Chrysler") Chrysler
                            option(value="Citroen") Citroen
                            option(value="Dodge") Dodge
                            option(value="Ferrari") Ferrari
                            option(value="Fiat") Fiat
                            option(value="Ford") Ford
                            option(value="Geely") Geely
                            option(value="General Motors") General Motors
                            option(value="GMC") GMC
                            option(value="Honda") Honda
                            option(value="Hyundai") Hyundai
                            option(value="Infiniti") Infiniti
                            option(value="Jaguar") Jaguar
                            option(value="Jeep") Jeep
                            option(value="Kia") Kia
                            option(value="Koenigsegg") Koenigsegg
                            option(value="Lamborghini") Lamborghini
                            option(value="Land Rover") Land Rover
                            option(value="Lexus") Lexus
                            option(value="Maserati") Maserati
                            option(value="Mazda") Mazda
                            option(value="McLaren") McLaren
                            option(value="Mercedes-Benz") Mercedes-Benz
                            option(value="Mini") Mini
                            option(value="Mitsubishi") Mitsubishi
                            option(value="Nissan") Nissan
                            option(value="Pagani") Pagani
                            option(value="Peugeot") Peugeot
                            option(value="Porsche") Porsche
                            option(value="Ram") Ram
                            option(value="Renault") Renault
                            option(value="Rolls Royce") Rolls Royce
                            option(value="Saab") Saab
                            option(value="Subaru") Subaru
                            option(value="Suzuki") Suzuki
                            option(value="Tata Motors") Tata Motors
                            option(value="Tesla") Tesla
                            option(value="Toyota") Toyota
                            option(value="Volkswagen") Volkswagen
                            option(value="Volvo") Volvo
                    div.form-group
                        label Model:
                        input.form-control(type="text", name="model")
                    div.form-group
                        label Clock Reading (KM):
                        input.form-control(type="text", name="km")
                    div.form-group
                        label Color:
                        select.form-control(name="color")
                            option(value="Black") Black
                            option(value="White}") White
                            option(value="Red") Red
                            option(value="Blue") Blue
                            option(value="Silver") Silver
                            option(value="Grey") Grey
                            option(value="Green") Green
                            option(value="Brown") Brown
                            option(value="Pink") Pink
                            option(value="Other") Other
                    div.form-group
                        label Location:
                        input.form-control(type="text", name="location")
                    div.form-group
                        label Value:
                        input.form-control(type="text", name="value", value="R")
                    button.btn.btn-large.btn-primary(type="submit", value="Add a new car") Add car
            

            div.col-md-6(style="margin:90px 0;")
                form.navbar-form.navbar-left(role="search" style="margin-bottom:20px;")
                    div.form-group
                        input.form-control(type="search", placeholder="search by name", name="search")   
                        button.btn.btn-default(type="submit" onsubmit="search(search)") Search
                table.table.table-bordered.btn-default
                    thead
                    th ID
                    th Vehicle Make
                    th Model
                    th KM's
                    th Color
                    th Location
                    th Value
                    - for(car in cars) {
                    tr.text-info.h5                
                        td= cars[car].id
                        td= cars[car].make
                        td= cars[car].model
                        td= cars[car].km
                        td= cars[car].color
                        td= cars[car].location
                        td= cars[car].value 
                    - }               
            

script(src='//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js', async=true)
script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js', async=true)
footer.footer
    div.container
        p.text-info.text-center Built by Dean Pillay
